{

  "organization": {
    "mspid": "",
    "title": ""
  },

  "log": {
    "level": "info",
    "file": "",
    "console": true
  },

  "session": {
    "secret": "secret123",
    "name": "nomad.session",
    "resave": false,
    "saveUninitialized": false,
    "rolling": true,
    "timeout": 1800000,
    "checkExpirationInterval": 3600000,
    "cookie": {
      "secure": true
    }
  },

  "database": {
    "pooling": true,
    "connection": {
      "host": "127.0.0.1",
      "port": 3306,
      "user": "",
      "password": "",
      "database": ""
    }
  },

  "apps": {
  },

  "services": {
    "LoginService": {
      "enabled": true,
      "classPath": "/login/v1/LoginService",
      "route": "/api/v1/auth",
      "csrfProtectionEnabled": false,
      "maxLoginAttempts": 5,
      "rateLimit": {
        "enabled": true,
        "windowMS": 900000,
        "maxPerIP": 100,
        "headers": false
      },
      "useBackendAdapters": [
        {"type": "userManagement", "name": "UserManagementAdapter"}
      ]
    },
    "UserManagementService": {
      "enabled": true,
      "classPath": "/users/v1/UserManagementService",
      "route": "/api/v1/users",
      "csrfProtectionEnabled": false,
      "useBackendAdapters": [
        {"type": "wallet", "name": "WalletAdapter"},
        {"type": "certAuth", "name": "CertAuthAdapter"},
        {"type": "userManagement", "name": "UserManagementAdapter"}
      ]
    },
    "AppService": {
      "enabled": true,
      "classPath": "/apps/v1/AppService",
      "route": "/api/v1/apps",
      "csrfProtectionEnabled": false
    },
    "NetworkService": {
      "enabled": true,
      "classPath": "/network/v1/NetworkService",
      "route": "/api/v1/network",
      "csrfProtectionEnabled": false,
      "useBackendAdapters": [
        {"type": "blockchain", "name": "BlockchainAdapter"}
      ]
    },
    "DocumentService": {
      "enabled": true,
      "classPath": "/documents/v1/DocumentService",
      "route": "/api/v1/documents",
      "csrfProtectionEnabled": false,
      "useBackendAdapters": [
        {"type": "blockchain", "name": "BlockchainAdapter"},
        {"type": "localStorage", "name": "LocalStorageAdapter"}
      ]
    },
    "SignatureService": {
      "enabled": true,
      "classPath": "/signatures/v1/SignatureService",
      "route": "/api/v1/signatures",
      "csrfProtectionEnabled": false,
      "useBackendAdapters": [
        {"type": "blockchain", "name": "BlockchainAdapter"},
        {"type": "localStorage", "name": "LocalStorageAdapter"},
        {"type": "wallet", "name": "WalletAdapter"}
      ]
    },
    "SwaggerService": {
      "enabled": false,
      "classPath": "/swagger/v1/SwaggerService",
      "route": "/api/docs"
    }
  },

  "backendAdapters": {
    "UserManagementAdapter": {
      "classPath": "/adapter/userManagement/v1/UserManagementAdapter",
      "config": {
        "passwordHashOptions" : {
          "type": "argon2id",
          "timeCost": 256,
          "memoryCost": 1024,
          "parallelism": 1,
          "saltLength": 32
        },
        "passwordKeyDerivationOptions" : {
          "type": "argon2id",
          "timeCost": 4096,
          "memoryCost": 9,
          "parallelism": 1,
          "saltLength": 32
        }
      }
    },
    "WalletAdapter": {
      "classPath": "/adapter/wallet/v1/WalletAdapter",
      "config": {
      }
    },
    "CertAuthAdapter": {
      "classPath": "/adapter/ca/v1/CertAuthAdapter",
      "config": {
        "url": "",
        "caName": "",
        "adminEnrollmentId": "admin",
        "adminEnrollmentSecret": "",
        "userEnrollmentSecret": "",
        "userEnrollmentRole": "client",
        "userEnrollmentAffiliation": "",
        "userEnrollmentMax": -1,
        "tlsOptions": {
          "trustedRoots": [],
          "verify": false
        }
      }
    },
    "SessionManagementAdapter": {
      "classPath": "/adapter/session/mysql/SessionManagementAdapter",
      "config": {
      }
    },
    "BlockchainAdapter": {
      "classPath": "/adapter/blockchain/v1/BlockchainAdapter",
      "config": {
        "url": "",
        "webhooks": []
      }
    },
    "LocalStorageAdapter": {
      "classPath": "/adapter/storage/v1/LocalStorageAdapter",
      "config": {
      }
    }
  }
}
